@using System.Collections.Immutable
@using BlazeKit.Web.Utils
@using BlazeKit.Web.Components
@using Microsoft.AspNetCore.Components.Routing
@code {
    [Parameter]
    public List<Tuple<string,string>> Items { get; set; }

    [Parameter]
    public bool Animate { get; set; } = false;
}
<div class="hidden lg:block lg:fixed top-30 left-[80%] p-5 @(new CssClass().AddIf("group",Animate).Apply())">
    <p class="text-sm uppercase text-gray-400">On this Site</p>
    <div class="group-hover:hidden flex flex-col gap-2 transition-all @(new CssClass().AddIf("hidden", !Animate).Apply())">
        <div class="bg-base-200 rounded w-20 h-1"></div>
        <div class="bg-base-200 rounded w-16 h-1"></div>
        <div class="bg-base-200 rounded w-14 h-1"></div>
        <div class="bg-base-200 rounded w-24 h-1"></div>
    </div>
     <div class="group-hover:opacity-100 transition-all @(
            new CssClass()
                .AddIf("opacity-100", !Animate)
                .AddIf("opacity-0", Animate)
                .Apply()
            )
        ">
            <div class="flex flex-col">
            @foreach (var (title, link) in Items)
            {
                <a class="no-underline text-xs p-1 text-gray-400 hover:text-gray-500 active:bg-sky-200" href="@link">@title</a>
                @* <BlazeKit.Web.Components.Link2></BlazeKit.Web.Components.Link2> *@
            }
            </div>
    </div>
</div>
